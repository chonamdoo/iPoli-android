<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/motivation1Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/add_challenge_motivation1_hint"
        android:paddingTop="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/motivation1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/motivation2Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/add_challenge_motivation2_hint"
        android:paddingTop="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/motivation2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/motivation3Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/add_challenge_motivation3_hint"
        android:paddingTop="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/motivation3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>


</LinearLayout>